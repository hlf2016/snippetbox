{{define "base"}}
<!doctype html>
<html lang='en'>
     <head>
         <meta charset='utf-8'>
         <title>{{template "title" .}} - Snippetbox</title>
     </head>
    <body>
        <header>
           <!-- block end 当指定文件不存在时 使用默认值  相对于 template 多了默认值-->
           {{block "header" .}}
           <h1><a href='/'>Snippetbox</a></h1>
           {{end}}
        </header>
        {{template "nav" .}}
        <main>
            {{template "main" .}}
        </main>
        <footer>Powered by <a href='https://golang.org/'>Go</a></footer>
    </body>
</html>
{{end}}